 <div class="container">
  <h1><%= @restaurant.name %></h1>
  <br>
  <h5><strong>Address: </strong><%= @restaurant.address %></h5>
  <h5><strong>Category: </strong><%= @restaurant.category %></h5>
  <br>
  <h3>Reviews</h3>
  <br>

  <div>
    <% @restaurant.reviews.each do |review| %>
      <div class="comment-card">
        <p><%= review.content %></p>
        <p><strong>rating: (<%= review.rating %>)</strong></p>
      </div>
    <% end %>
  </div>

  <br>
  <br>

  <h5>Add Review</h5>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
    <%= f.submit "add a review", class: "btn btn-primary" %>
  <% end %>

</div>
